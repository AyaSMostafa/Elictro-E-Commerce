@model Product
@{
    ViewData["Title"] = "Details";
}

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					


						<!-- Product main img -->
					<div class="col-5 col-push-2">
						<div id="product-main-img">
							<div class="product-preview">
								<img src="/img/@Model.image" alt="">
							</div>

							<div class="product-preview">
								<img src="/img/product03.png" alt="">
							</div>

							<div class="product-preview">
								<img src="/img/product06.png" alt="">
							</div>

							<div class="product-preview">
								<img src="/img/product08.png" alt="">
							</div>
						</div>
					</div>




					<!-- /Product main img -->

					
					<!-- Product details -->
					<div class="col-md-5 ">
						<div class="product-details mt-5">
							<h2 class="product-name">@Model.Pro_Name</h2>
							<div>
								<div class="product-rating">
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star-o"></i>
								</div>
								<a class="review-link" href="#">10 Review(s) | Add your review</a>
							</div>
							<div>
								<h3 class="product-price">@Model.Unit_Price<del class="product-old-price">@Model.Discount</del></h3>
							
							</div>
							<p>@Model.Description</p>

							<div class="add-to-cart">
								@if (User.IsInRole("User") == true){
								<a class="add-to-cart-btn btn pt-1" asp-controller="Orders" asp-action="AddtoShoppingCart" asp-route-id=@Model.Pro_Id><i class="fa fa-shopping-cart"></i> add to cart</a>
							
								}</div>

							<ul class="product-btns">
								<li><a href="#"><i class="fa fa-heart-o"></i> add to wishlist</a></li>
								<li><a href="#"><i class="fa fa-exchange"></i> add to compare</a></li>
							</ul>

							<ul class="product-links">
								<li>Category:</li>
								<li><a href="#">Phones</a></li>
								<li><a href="#">LapTops</a></li>
								<li><a href="#">LapTops</a></li>

								<li><a href="#">Headphones</a></li>
								<li><a href="#">Accessories</a></li>
							</ul>

							<ul class="product-links">
								<li>Share:</li>
								<li><a href="#"><i class="fa fa-facebook"></i></a></li>
								<li><a href="#"><i class="fa fa-twitter"></i></a></li>
								<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
								<li><a href="#"><i class="fa fa-envelope"></i></a></li>
							</ul>


						</div>
						
								<button class="btn btn-secondary" ><a asp-controller="products" asp-action="GetAllProducts" >Back TO List</a> </button>
						
					</div>
					<!-- /Product details -->


				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->





















