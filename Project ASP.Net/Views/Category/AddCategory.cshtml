@model CategoryViewModel;

@{
    ViewData["Title"] = "AddCategory";
}
@if (User.IsInRole("Admin") == true)
{
   <div class="container">
    <h2 style="margin-top:15px">Add Category</h2>

    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="SaveAddCategory" asp-route-id="@Model.Id" style="margin-top:10px"  enctype= "multipart/form-data" >

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:15px">
                    <input asp-for="Picture" type="file"/>
                </div>
                <div class="form-group" style="margin-top:15px">

                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Category" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    </div>
}

   
