
@model List<Category>
@{
    ViewData["Title"] = "AddCategory";
	Layout = "_CrudCategory";
}

<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Dec</th>
						<th>Picture</th>
					</tr>
				</thead>
				<tbody>
						@foreach (Category item in @Model)
					   {
					<tr>
						<td style="width: 20%;">@item.Name</td>
						<td style="width: 100%;">@item.Description</td>
						<td><img src="/images/@item.picture" style="width:70px;height:70px" alt=""></td>
						<td>
							<a href="/Category/EditCategory/@item.Cat_Id" class="edit" ><i class="material-icons" title="Edit">&#xE254;</i></a>
							<a href="/Category/DeleteCategory/@item.Cat_Id" class="delete"><i class="material-icons"title="Delete">&#xE872;</i></a>
						</td>
						   
					</tr>
					   }
					
				</tbody>
</table>



